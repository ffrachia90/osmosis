{
  "name": "osmosis",
  "version": "2.0.0",
  "description": "AI-powered Legacy Application Modernizer - Transform old apps to modern React with architectural planning",
  "type": "module",
  "bin": {
    "osmosis": "./dist/cli.js",
    "osmosis-mcp": "./dist/mcp/server.js"
  },
  "scripts": {
    "dev": "tsx watch src/cli.ts",
    "build": "tsc",
    "start": "tsx src/cli.ts",
    "analyze": "tsx src/cli.ts analyze",
    "migrate": "tsx src/cli.ts migrate",
    "mcp": "tsx src/mcp/server.ts",
    "mcp:dev": "tsx watch src/mcp/server.ts",
    "test": "vitest",
    "test:e2e": "playwright test",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "legacy",
    "modernization",
    "migration",
    "ai",
    "video-analysis",
    "react",
    "automation"
  ],
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@xenova/transformers": "^2.17.1",
    "chromadb": "^1.8.1",
    "commander": "^11.1.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "glob": "^10.3.10",
    "ora": "^8.0.1",
    "sharp": "^0.33.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.11.0",
    "@vitest/ui": "^1.3.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}


